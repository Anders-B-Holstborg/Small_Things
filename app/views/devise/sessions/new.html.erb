<html>
  <body>
    <div class="container-fluid main">
      <div id="background">
        <br>
        <br>
        <div class="container">
          <div class="row justify-content-center">
            <div id="box" class="col-xs-12 col-sm-4 col-sm-offset-4">
              <div class="container text-center">
                <h2>Log in</h2>
              </div>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
                  <%= f.input :password, required: false, placeholder: "••••••" %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, "Log in", class: "btn btn-primary" %>
                </div>
                <%= render "devise/shared/links" %>
              <% end %>
            </div>
          </div>
        </div>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
      </div>
    </div>
  </body>
</html>

