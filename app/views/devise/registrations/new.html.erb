
<div class="container">
  <div class="row justify-content-center">
    <div id="box" class="col-xs-16 col-sm-6 col-sm-offset-3">
      <div class="container text-center">
        <h2>Sign Up</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name,
                      required: true,
                      input_html: { autocomplete: "name" } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <h5>Please tell us more about you to have a Customized experienced</h5>
        <div class="form-inputs">
          <%= f.input :time_of_sending,
                      required: true,
                      hint: "let us know at which time you want to receive your daily notif! ðŸ˜‰" %>
          <%= f.input :preferred_day,
                      required: true,
                      collection: (0..6).to_a.map{|j| [(Date.today + j.days).strftime("%A"), (Date.today + j.days).to_s ]  },
                      hint: "let us know which day you have the most free time! ðŸ˜‰" %>
          <%= f.input :address,
                      required: true,
                      hint: "By sharing your location, we can customized your experience!" %>
        </div>
        <div class="form-inputs">
            <%= f.input :photo, as: :file %>
        </div>
        <div class="btn">
        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
          </div>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>

