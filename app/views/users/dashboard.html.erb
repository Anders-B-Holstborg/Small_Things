<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-sm-4">
      <br>
      <br>
      <div id="box-dashboard">
        <button class="btn"><%= link_to "View Categories", categories_path %></button>
        <button class="btn"><%= link_to "Choose Categories", new_category_path %></button>
        <button class="btn"><%= link_to "Create activity!", new_activity_path %></button>
    </div>
  </div>
  <div class=" col-sm-4">
      <br>
      <br>
    <div class="contact-card">
      <div class="contact-card__header-image">
        <div class="contact-card__avatar"></div>
      </div>
      <p class="contact-card__name"><%= @current_user.name %></p>
      <ul>
        <li class="contact-card__link contact-card__link--mobile"><a title="Call Callum Brown" href="tel:"><%= @current_user.address %></a></li>
        <li class="contact-card__link contact-card__link--mobile"><a title="Call Callum Brown" href="tel:"><%= @current_user.created_at.strftime("%Y, %B %d") %></a></li>
        <li class="contact-card__link contact-card__link--mobile"><a title="Call Callum Brown" href="tel:"><%= @current_user.preferred_day.strftime("%A") if @current_user.preferred_day %></a></li>
      </ul>
    </div>
  </div>

<div id="feed" class="col-sm">
  <div id="activity_card" class="card flex-row flex-wrap">
    <%= image_tag "sports_logo.png" , height: '42', width: '42'%>
  <div class="card-block">
    <% current_user.bookings.each do |booking| %>
    <h2> Category : <%= booking.activity.category.title %> </h4>
    <p>Activity Title : "<%= booking.activity.title %>"</p>
    <p>Activity Description : "<%= booking.activity.description %>"</p>
    <p>Date : dd/mm/yyyy </p>
    <hr>
      <% end %>
    <span class="badge badge-success">DONE</span>
  </div>
</div>
<div>
<div>
  <footer class="container-fluid text-center">
    <p>Footer Text</p>
  </footer>
  </div>
</div>

